#include <kipr/wombat.h>

int main()
{
    int arm = 1;
    int claw = 2;
    int open = 710;
    int close = 0;
    int bluering = 893;
    int up = 300;
    enable_servos();
    set_servo_position(arm,up);
    msleep(1000);
    while (get_servo_position(arm) < bluering)
    {
        set_servo_position(arm,up);
        up = up + 5;
        msleep(10);
    }
    set_servo_position(claw,open);
    msleep(1000);
    while (get_servo_position(claw) > close)
    {
        set_servo_position(claw,open);
        open = open - 5;
        msleep(10);
    }
    
    set_servo_position(arm,up);
    msleep(1000);
    
    
    return 0;
}
